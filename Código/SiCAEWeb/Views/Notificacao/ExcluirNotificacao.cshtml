@model SiCAEWeb.Models.NotificacaoModel

@{
    ViewData["Title"] = "ExcluirNotificacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir Notificação</h1>

<h3>Tem certeza que deseja excluir essa notificação?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idNotificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idNotificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.prioridade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.prioridade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.remetente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.remetente)
        </dd>
        <dt class="col-sm-2">
            Destinatário
        </dt>
        @if (Model.notificaProfessor)
        {
            <dd>Professor</dd>
        }
        @if (Model.notificaResponsavel)
        {
            <dd>&nbsp;Responsável</dd>
        }
        @if (Model.notificaAluno)
        {
            <dd>&nbsp;Aluno</dd>
        }
    </dl>
    
    <form asp-action="ExcluirNotificacao">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary rounded-pill">Voltar</a>
    </form>
</div>

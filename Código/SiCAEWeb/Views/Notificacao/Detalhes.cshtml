@model SiCAEWeb.Models.NotificacaoModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>NotificacaoModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idNotificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idNotificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.prioridade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.prioridade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.remetente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.remetente)
        </dd>
        <dt class="col-sm-2">
            Destinatário(s)
        </dt>
        @if (Model.notificaProfessor)
        {
            <dd>Professor</dd>
        }
        @if (Model.notificaResponsavel)
        {
            <dd>&nbsp;Responsável</dd>
        }
        @if (Model.notificaAluno)
        {
            <dd>&nbsp;Aluno</dd>
        }
    </dl>
</div>
<div>
    <a asp-controller="Notificacao" asp-action="AlterarNotificacao" asp-route-id="Model.idNotificacao" class="btn btn-primary rounded-pill"><i class="fa fa-cog"></i> Alterar</a>
    <a asp-action="Index" class="btn btn-primary rounded-pill">Voltar</a>

</div>


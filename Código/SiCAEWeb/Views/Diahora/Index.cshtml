@model IEnumerable<SiCAEWeb.Models.DiahoraModel>

@{
    ViewData["Title"] = "Dia/Hora";
}
<div class="container-fluid ml-md-4">
    <div class="row">
        <div class="col-12">
            <h2>Dia/Hora</h2>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2">
            <a asp-action="Create" class="btn btn-primary rounded-pill">Novo Dia/Hora</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="table-responsive-md">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdDiahora)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HorarioInicio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HorarioTermino)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaSemana)
                        </th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdDiahora)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HorarioInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HorarioTermino)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaSemana)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IdDiahora }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IdDiahora }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IdDiahora })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

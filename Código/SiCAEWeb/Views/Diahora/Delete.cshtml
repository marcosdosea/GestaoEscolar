@model SiCAEWeb.Models.DiahoraModel

@{
    ViewData["Title"] = "Deletar horário";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Horário</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h4>Deletar</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>Tem certeza que deseja DELETAR?</h3>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDiahora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDiahora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HorarioInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HorarioInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HorarioTermino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HorarioTermino)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaSemana)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaSemana)
        </dd>
    </dl>
    
    <form class="row" asp-action="Delete">
        <div class="col-2">
            <input type="submit" value="Deletar" class="btn btn-danger rounded-pill" />
        </div>
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary rounded-pill">Voltar</a>
        </div>
    </form>
</div>

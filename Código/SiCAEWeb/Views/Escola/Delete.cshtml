            <h3>Tem certeza que deseja DELETAR?</h3>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEscola)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEscola)

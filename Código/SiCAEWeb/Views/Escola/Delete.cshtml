        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDiretor)
        </dd>
    </dl>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete">
                <input type="submit" value="Deletar" class="btn btn-danger rounded-pill" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary rounded-pill">Voltar</a>
        </div>
    </div>
    
</div>

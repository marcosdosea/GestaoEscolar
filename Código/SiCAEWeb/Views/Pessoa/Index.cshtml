@model IEnumerable<SiCAEWeb.Models.PessoaModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Pessoa</h2>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="AdicionarPessoa" class="btn btn-primary rounded-pill"><i class="fa fa-plus"></i>Novo</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
            <input type="text" name="search" class="w3-input w3-animate-input w3-border" placeholder="Pesquisar...">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Identificação</th>
                        <th>Nome</th>
                        <th>Função</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdPessoa)</td>
                        <td>@Html.DisplayFor(modelItem => item.NomeSocial)</td>
                        <td>Professor</td> <!--rever com os meninos o campo no banco-->
                        <td>
                            <a asp-controller="Pessoa" asp-action="Detalhes" asp-route-id="@item.IdPessoa" class="btn btn-primary rounded-pill"><i class="fa fa-info"></i> Detalhes</a>
                            <a asp-controller="Pessoa" asp-action="AlterarPessoa" asp-route-id="@item.IdPessoa" class="btn btn-primary rounded-pill"><i class="fa fa-cog"></i> Alterar</a>
                            <a asp-controller="Pessoa" asp-action="Excluir" asp-route-id="@item.IdPessoa" class="btn btn-primary rounded-pill"><i class="fa fa-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

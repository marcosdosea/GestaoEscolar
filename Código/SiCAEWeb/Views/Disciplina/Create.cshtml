@model SiCAEWeb.Models.DisciplinaModel

@{
    ViewData["Title"] = "Nova Disciplina";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Disciplina</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h4>Novo</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdDisciplina" class="control-label"></label>
                    <input asp-for="IdDisciplina" class="form-control" />
                    <span asp-validation-for="IdDisciplina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary rounded-pill" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary rounded-pill">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model SiCAEWeb.Models.DisciplinaModel

@{
    ViewData["Title"] = "Deletar Disciplina";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Disciplina</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h4>Deletar</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>Tem certeza que deseja DELETAR?</h3>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDisciplina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete">
                <input type="submit" value="Deletar" class="btn btn-danger rounded-pill" /> |
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary rounded-pill">Voltar</a>
        </div>
    </div>
</div>
